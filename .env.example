# Environment variables for DAM - The House of Insulation
# Copy this file to .env.local and fill in your actual values

# ===========================================
# REQUIRED ENVIRONMENT VARIABLES
# ===========================================

# Application configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# EmailJS configuration for contact forms and order processing
# Get these from https://www.emailjs.com/
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id_here
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=template_order_pdf
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key_here

# Builder.io for content management (if using)
# Get your key from https://www.builder.io/
NEXT_PUBLIC_BUILDER_KEY=your_builder_key_here

# ===========================================
# OPTIONAL ENVIRONMENT VARIABLES
# ===========================================

# Database configuration (if adding backend features)
DATABASE_URL=

# Authentication (if adding user accounts)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.vercel.app

# Analytics and tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_ADMIN=true

# API configurations
PING_MESSAGE="pong"

# Social media links (for footer/contact)
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/your-page
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/your-page
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/your-company

# Business information
NEXT_PUBLIC_COMPANY_EMAIL=info@damgcc.com
NEXT_PUBLIC_COMPANY_PHONE=+971-XX-XXX-XXXX
NEXT_PUBLIC_COMPANY_ADDRESS="UAE, Dubai"

# ===========================================
# DEPLOYMENT NOTES
# ===========================================
# 1. For Vercel deployment, add these in your Vercel dashboard
# 2. Use NEXT_PUBLIC_ prefix for client-side variables
# 3. Keep sensitive data (API keys, secrets) without NEXT_PUBLIC_ prefix
# 4. Update NEXT_PUBLIC_APP_URL with your actual domain after deployment
